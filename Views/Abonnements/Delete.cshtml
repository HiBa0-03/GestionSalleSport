@model WebApplication1.Models.Abonnement

@{
    ViewData["Title"] = "Supprimer un Abonnement";
}

<div class="form-modern">
    <div class="alert alert-danger" role="alert" style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border: none; border-radius: 12px; padding: 1.5rem;">
        <h4 class="alert-heading mb-3">
            <i class="fas fa-exclamation-triangle"></i> Attention !
        </h4>
        <p class="mb-0">Vous êtes sur le point de supprimer définitivement cet abonnement. Cette action est irréversible.</p>
    </div>

    <h2 class="section-title mb-4">
        <i class="fas fa-trash"></i>
        Supprimer l'Abonnement
    </h2>

    <div class="card-modern mb-4">
        <dl class="row g-3">
            <dt class="col-sm-4">
                <i class="fas fa-tag text-primary"></i> Type
            </dt>
            <dd class="col-sm-8">
                <strong>@Model.Type</strong>
            </dd>
            <dt class="col-sm-4">
                <i class="fas fa-dollar-sign text-primary"></i> Prix
            </dt>
            <dd class="col-sm-8">
                <span class="badge badge-modern" style="background: linear-gradient(135deg, #10b981, #059669);">
                    @Model.Prix DH
                </span>
            </dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button class="btn btn-modern btn-danger-modern" type="submit">
            <i class="fas fa-trash"></i> Confirmer la suppression
        </button>
        <a class="btn btn-modern btn-secondary-modern" href="/Abonnements">
            <i class="fas fa-times"></i> Annuler
        </a>
    </form>
</div>
