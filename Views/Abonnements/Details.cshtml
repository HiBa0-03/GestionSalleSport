@model WebApplication1.Models.Abonnement

@{
    ViewData["Title"] = "Détails de l'Abonnement";
}

<div class="form-modern">
    <h2 class="section-title mb-4">
        <i class="fas fa-id-card"></i>
        Détails de l'Abonnement
    </h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card-modern text-center">
                <div class="card-icon mx-auto mb-3" style="background: linear-gradient(135deg, #10b981, #059669);">
                    <i class="fas fa-id-card"></i>
                </div>
                <h4 class="card-title">@Model.Type</h4>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-modern">
                <dl class="row g-3">
                    <dt class="col-sm-4">
                        <i class="fas fa-tag text-primary"></i> Type
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Type</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-dollar-sign text-primary"></i> Prix
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge badge-modern" style="background: linear-gradient(135deg, #10b981, #059669); font-size: 1rem; padding: 0.75rem 1.5rem;">
                            @Model.Prix DH
                        </span>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar-alt text-primary"></i> Durée
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge badge-modern" style="background: linear-gradient(135deg, #6366f1, #4f46e5); font-size: 1rem; padding: 0.75rem 1.5rem;">
                            @Model.Duree mois
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-modern btn-secondary-modern" href="/Abonnements">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a class="btn btn-modern btn-warning-modern" href="/Abonnements/Edit/@Model.Id">
            <i class="fas fa-edit"></i> Modifier
        </a>
    </div>
</div>
