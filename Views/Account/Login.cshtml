@model WebApplication1.Models.LoginViewModel

@{
    ViewData["Title"] = "Connexion Admin";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
    <div class="form-modern" style="max-width: 450px; width: 100%;">
        <h2 class="section-title mb-4 text-center">
            <i class="fas fa-lock"></i>
            Connexion Admin
        </h2>

        @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Vous devez vous connecter pour accéder à cette page.
            </div>
        }

        <form asp-action="Login" method="post" class="row g-4">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">
                <label class="form-label-modern">
                    <i class="fas fa-user"></i> Nom d'utilisateur
                </label>
                <input asp-for="Username" class="form-control form-control-modern" placeholder="Entrez votre nom d'utilisateur" autofocus />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label class="form-label-modern">
                    <i class="fas fa-key"></i> Mot de passe
                </label>
                <input asp-for="Password" class="form-control form-control-modern" type="password" placeholder="Entrez votre mot de passe" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12 mt-4">
                <button class="btn btn-modern btn-primary-modern w-100" type="submit">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

