@model IEnumerable<WebApplication1.Models.Admin>

@{
    ViewData["Title"] = "Gestion des Administrateurs";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">
            <i class="fas fa-users-cog"></i> Gestion des Administrateurs
        </h2>
        <a class="btn btn-modern btn-primary-modern" asp-action="Create">
            <i class="fas fa-user-plus"></i> Ajouter un Administrateur
        </a>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom d'utilisateur</th>
                        <th>Date de création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Username</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a class="btn btn-sm btn-modern btn-info-modern" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fas fa-eye"></i> Détails
                                </a>
                                <a class="btn btn-sm btn-modern btn-warning-modern" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a class="btn btn-sm btn-modern btn-danger-modern" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




