@model WebApplication1.Models.EditAdminViewModel

@{
    ViewData["Title"] = "Modifier l'Administrateur";
}

<div class="form-modern">
    <h2 class="section-title mb-4">
        <i class="fas fa-user-edit"></i>
        Modifier l'Administrateur
    </h2>

    <form asp-action="Edit" method="post" class="row g-4">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label class="form-label-modern">
                <i class="fas fa-user"></i> Nom d'utilisateur
            </label>
            <input asp-for="Username" class="form-control form-control-modern" placeholder="Entrez le nom d'utilisateur" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label-modern">
                <i class="fas fa-key"></i> Nouveau mot de passe (laisser vide pour ne pas changer)
            </label>
            <input asp-for="Password" class="form-control form-control-modern" type="password" placeholder="Laissez vide pour ne pas changer" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label-modern">
                <i class="fas fa-key"></i> Confirmer le nouveau mot de passe
            </label>
            <input asp-for="ConfirmPassword" class="form-control form-control-modern" type="password" placeholder="Confirmez le nouveau mot de passe" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="col-12 mt-4">
            <button class="btn btn-modern btn-primary-modern" type="submit">
                <i class="fas fa-save"></i> Enregistrer les modifications
            </button>
            <a class="btn btn-modern btn-secondary-modern" asp-action="Index">
                <i class="fas fa-times"></i> Annuler
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




