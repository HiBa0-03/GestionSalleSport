@model WebApplication1.Models.Paiement
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Modifier un Paiement";
    var membres = (IEnumerable<SelectListItem>)ViewData["MembreId"]!;
}

<div class="form-modern">
    <h2 class="section-title mb-4">
        <i class="fas fa-edit"></i>
        Modifier le Paiement
    </h2>

    <form method="post" class="row g-4">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-calendar"></i> Date du paiement
            </label>
            <input class="form-control form-control-modern" type="date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-money-bill-wave"></i> Montant (DH)
            </label>
            <input class="form-control form-control-modern" type="number" step="0.01" name="Montant" value="@Model.Montant" min="0" placeholder="0.00" required />
        </div>
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-user"></i> Membre
            </label>
            <select class="form-select form-control-modern" name="MembreId" required>
                <option value="">SÃ©lectionner un membre</option>
                @foreach(var item in membres) {
                    if (item.Selected) {
                        <option value="@item.Value" selected="selected">@item.Text</option>
                    } else {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="col-12 mt-4">
            <button class="btn btn-modern btn-primary-modern" type="submit">
                <i class="fas fa-save"></i> Enregistrer les modifications
            </button>
            <a class="btn btn-modern btn-secondary-modern" href="/Paiements">
                <i class="fas fa-times"></i> Annuler
            </a>
        </div>
    </form>
</div>
