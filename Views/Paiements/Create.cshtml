@model WebApplication1.Models.Paiement
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Ajouter un Paiement";
}

<div class="form-modern">
    <h2 class="section-title mb-4">
        <i class="fas fa-credit-card"></i>
        Ajouter un Nouveau Paiement
    </h2>

    <form asp-action="Create" method="post" class="row g-4">
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-calendar"></i> Date du paiement
            </label>
            <input asp-for="Date" class="form-control form-control-modern" type="date" required />
        </div>
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-money-bill-wave"></i> Montant (DH)
            </label>
            <input asp-for="Montant" class="form-control form-control-modern" type="number" step="0.01" min="0" placeholder="0.00" required />
        </div>
        <div class="col-md-4">
            <label class="form-label-modern">
                <i class="fas fa-user"></i> Membre
            </label>
            <select asp-for="MembreId" asp-items="@(ViewData["MembreId"] as IEnumerable<SelectListItem>)" class="form-select form-control-modern" required>
                <option value="">SÃ©lectionner un membre</option>
            </select>
        </div>
        <div class="col-12 mt-4">
            <button class="btn btn-modern btn-primary-modern" type="submit">
                <i class="fas fa-save"></i> Ajouter le paiement
            </button>
            <a class="btn btn-modern btn-secondary-modern" href="/Paiements">
                <i class="fas fa-times"></i> Annuler
            </a>
        </div>
    </form>
</div>
