@model WebApplication1.Models.Paiement

@{
    ViewData["Title"] = "Détails du Paiement";
}

<div class="form-modern">
    <h2 class="section-title mb-4">
        <i class="fas fa-credit-card"></i>
        Détails du Paiement
    </h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card-modern text-center">
                <div class="card-icon mx-auto mb-3" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
                    <i class="fas fa-credit-card"></i>
                </div>
                <h4 class="card-title">@Model.Montant DH</h4>
                <p class="text-muted">Montant payé</p>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-modern">
                <dl class="row g-3">
                    <dt class="col-sm-4">
                        <i class="fas fa-calendar text-primary"></i> Date
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Date.ToString("dd/MM/yyyy")</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-money-bill-wave text-primary"></i> Montant
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge badge-modern" style="background: linear-gradient(135deg, #f59e0b, #d97706); font-size: 1rem; padding: 0.75rem 1.5rem;">
                            @Model.Montant DH
                        </span>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user text-primary"></i> Membre
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@(Model.Membre?.Nom ?? "N/A")</strong>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-modern btn-secondary-modern" href="/Paiements">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a class="btn btn-modern btn-warning-modern" href="/Paiements/Edit/@Model.Id">
            <i class="fas fa-edit"></i> Modifier
        </a>
    </div>
</div>
