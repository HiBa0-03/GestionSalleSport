@model WebApplication1.Models.Membre

@{
    ViewData["Title"] = "Supprimer un Membre";
}

<div class="form-modern">
    <div class="alert alert-danger" role="alert" style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border: none; border-radius: 12px; padding: 1.5rem;">
        <h4 class="alert-heading mb-3">
            <i class="fas fa-exclamation-triangle"></i> Attention !
        </h4>
        <p class="mb-0">Vous êtes sur le point de supprimer définitivement ce membre. Cette action est irréversible.</p>
    </div>

    <h2 class="section-title mb-4">
        <i class="fas fa-user-times"></i>
        Supprimer le Membre
    </h2>

    <div class="card-modern mb-4">
        <dl class="row g-3">
            <dt class="col-sm-4">
                <i class="fas fa-user text-primary"></i> Nom
            </dt>
            <dd class="col-sm-8">
                <strong>@Model.Nom</strong>
            </dd>
            <dt class="col-sm-4">
                <i class="fas fa-birthday-cake text-primary"></i> Âge
            </dt>
            <dd class="col-sm-8">
                <span class="badge badge-modern" style="background: linear-gradient(135deg, #6366f1, #4f46e5);">
                    @Model.Age ans
                </span>
            </dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button class="btn btn-modern btn-danger-modern" type="submit">
            <i class="fas fa-trash"></i> Confirmer la suppression
        </button>
        <a class="btn btn-modern btn-secondary-modern" href="/Membres">
            <i class="fas fa-times"></i> Annuler
        </a>
    </form>
</div>
